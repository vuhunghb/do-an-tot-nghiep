<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scr4_main_context"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="true"
    android:alpha="0.9"
    android:gravity="right"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/scr4_ads_main_context_inf"
        android:layout_width="650dp"
        android:layout_height="fill_parent"
        android:alpha="1"
        android:background="#313131"
        android:clickable="true"
        android:visibility="invisible" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <ImageView
                android:id="@+id/scr4_ads_main_context_img"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:alpha="1"
                android:scaleType="fitXY"
                android:src="@drawable/cantfoundish" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="#313131"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/scr4_ads_context_order_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClickAdsOrder"
                android:src="@drawable/icon_buying" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_facebook" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_twitterr" />

            <ImageView
                android:id="@+id/scr4_hide_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:onClick="onClickHideInf"
                android:src="@drawable/icon_back" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="#313131"
        android:clickable="true"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" >

            <LinearLayout
                android:id="@+id/scr4_ads_main_context_list_tags"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>